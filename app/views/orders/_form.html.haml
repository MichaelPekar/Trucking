= form_for @order, :html => { :class => 'form-horizontal' } do |f|
  .row-fluid
    .span3
      .form-label
        = t 'order_form.company'
        = ':'
    .span9
      - if @order.errors[:company].any?
        .error-text
          = @order.errors[:company].join(', ')
          - order_error = "error"
      = f.text_field :company, :class => "span_12 text_field #{ order_error }", placeholder: t('order_form.company_placeholder')
  %br
  .row-fluid
    .span3
      .form-label
        = t 'order_form.contact_person'
        = ':'
    .span9
      - if @order.errors[:contact_person].any?
        .error-text
          = @order.errors[:contact_person].join(', ')
          - contact_person_error = "error"
      = f.text_field :contact_person, :class => "span_12 text_field #{ contact_person_error }", placeholder: t('order_form.contact_person_placeholder')
  %br
  .row-fluid
    .span3
      .form-label
        = t 'order_form.phone'
        = ':'
    .span9
      - if @order.errors[:phone].any?
        .error-text
          = @order.errors[:phone].join(', ')
          - phone_error = "error"
      = f.phone_field :phone, :class => "span_12 text_field #{ phone_error }", placeholder: t('order_form.phone_placeholder')
  %br
  .row-fluid
    .span3
      .form-label
        = t 'order_form.email'
        = ':'
    .span9
      - if @order.errors[:email].any?
        .error-text
          = @order.errors[:email].join(', ')
          - email_error = "error"
      = f.email_field :email, :class => "span_12 text_field #{ email_error }", placeholder: t('order_form.email_placeholder'), value: "#{ current_user.email if current_user }"
  %br
  .row-fluid
    .span3
      .form-label
        = t 'order_form.cargo'
        = ':'
    .span9
      - if @order.errors[:cargo].any?
        .error-text
          = @order.errors[:cargo].join(', ')
          - cargo_error = "error"
      = f.text_area :cargo, class: "span_12 text_field #{ cargo_error }", rows: 5, placeholder: t('order_form.cargo_placeholder'), style: 'resize: none'
  %br
  .row-fluid
    .span3
      .form-label
        = t 'order_form.from_address'
        = ':'
    .span9
      - if @order.errors[:from_address].any?
        .error-text
          = @order.errors[:from_address].join(', ')
          - from_address_error = "error"
      = f.text_area :from_address, class: "span_12 text_field #{ from_address_error }", rows: 3, placeholder: t('order_form.from_address_placeholder'), style: 'resize: none'
  %br
  .row-fluid
    .span3
      .form-label
        = t 'order_form.to_address'
        = ':'
    .span9
      - if @order.errors[:to_address].any?
        .error-text
          = @order.errors[:to_address].join(', ')
          - to_address_error = "error"
      = f.text_area :to_address, class: "span_12 text_field #{ to_address_error }", rows: 3, placeholder: t('order_form.to_address_placeholder'), style: 'resize: none'
  %br
  .row-fluid
    .span3
      .form-label
        = t 'order_form.start_date'
        = ':'
    .span9
      - if @order.errors[:start_date].any?
        .error-text
          = @order.errors[:start_date].join(', ')
          - start_date_error = "error"
      #datetimepicker1.input-append.date{ style: 'width: 91%'}
        = f.text_field :start_date, class: "span_12", 'data-format' => 'dd/MM/yyyy hh:mm:ss', 'type' => 'text'
        %span.add-on
          %i{ 'data-time-icon' => 'icon-time', 'data-date-icon' => 'icon-calendar'}
          :javascript
            $(function(){
                $('#datetimepicker1').datetimepicker({
                    language: 'pt-BR'
                });
            });
  %br
  .row-fluid
    .span3
      .form-label
        = t 'order_form.additional_info'
        = ':'
    .span9
      = f.text_area :additional_info, class: 'span_12', rows: 3, placeholder: t('order_form.additional_info_placeholder'), style: 'resize: none'
  %br
  = f.simple_captcha :label => "Enter numbers.."
  %br
  %div
    = f.submit t('make_order'), :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), orders_path, :class => 'btn'
