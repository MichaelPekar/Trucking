- model_class = Admin::Partner
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:link)
      %th= model_class.human_attribute_name(:logo)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @partners.each do |partner|
      %tr
        %td= link_to partner.id, admin_partner_path(partner)
        %td= partner.link
        %td= image_tag partner.logo.url(:small), style: 'width: 150px'
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_partner_path(partner), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_partner_path(partner), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_partner_path, :class => 'btn btn-primary'
