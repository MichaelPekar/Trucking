- model_class = Admin::Partner
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:link) + ':'
  %br
  = @partner.link
%p
  %strong= model_class.human_attribute_name(:logo) + ':'
  %br
  = image_tag @partner.logo.url(:thumb)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_partners_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_partner_path(@partner), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_partner_path(@partner), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
