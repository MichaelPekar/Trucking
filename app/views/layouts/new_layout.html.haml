  %body

    %nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to root_path, class: 'navbar-brand' do
            BABYDORYCH-TRANS.COM.UA
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to t('tabs.home'), root_path, title: t('icons.home')
            - if current_user
              %li
                = link_to t('icons.admin'), admin_path, title: t('icons.admin') if current_user.admin?
              %li
                = link_to t('icons.profile'), edit_user_registration_path, title: t('icons.profile')
              %li
                = link_to t('icons.orders'), orders_path, title: t('icons.orders')
              %li
                = link_to t('icons.logout'), destroy_user_session_path, method: :delete, title: t('icons.logout')
            - else
              %li
                = link_to t('devise.enter'), new_user_session_path, title: t('icons.login')
            = locale_select id: 'countries', locales: application_languages

    #myCarousel.carousel.slide
      / Indicators
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
        %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
        %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
      / Wrapper for slides
      .carousel-inner
        - Admin::GalleryItem.all.each_with_index do |item, i|
          .item{ class: "#{ 'active' if i == 0 }"}
            .fill{ style: "background-image: url(#{ item.image.url })"}
            .carousel-caption
              %h1
                = item.text

      %a.left.carousel-control{"data-slide" => "prev", href: "#myCarousel"}
        %span.icon-prev
      %a.right.carousel-control{"data-slide" => "next", href: "#myCarousel"}
        %span.icon-next

    = yield

