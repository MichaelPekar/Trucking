  .form-wrap
    .row
      .title.animated.fadeInDown{"data-animation" => "fadeInDown", "data-animation-delay" => ".8s", style: "-webkit-animation: 0.8s;"}
        %h1
          = t 'devise.forgot_password'
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :зщые }) do |f|
        = devise_error_messages!
