          = f.email_field :email, class: 'form-control', placeholder: t('devise.email_label'), required: "required"

        %button#signIn_1.btn.btn-block.signin{type: "submit"}
          = t('devise.send_restore_passwords_instructions')
      %br
      %br
      %br
      %br
      = render "devise/shared/links"