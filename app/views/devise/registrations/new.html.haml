%h2.title.calibri
  = t('devise.registration')
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .row-fluid
    = f.email_field :email, :autofocus => true, placeholder: 'Email', class: 'span_12 text_field'
    %br
    = f.password_field :password, placeholder: 'Password', class: 'span_12 text_field'
    %br
    = f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'span_12 text_field'
  %div
    = f.submit t('devise.sign_up'), class: 'btn btn-info'

= render "devise/shared/links"

